pipeline {
    agent any

    environment {
        PYTHONPATH = "${env.WORKSPACE}"
    }

    stages {
        stage('Pr√©paration') {
            steps {
                echo 'üõ†Ô∏è Configuration de l‚Äôenvironnement Python'
                bat '''
                python -m venv .venv
                call .venv\\Scripts\\activate
                pip install --upgrade pip
                pip install -r requirements.txt
                '''
            }
        }

        stage('Tests') {
            steps {
                echo 'üöÄ Lancement des tests SeleniumBase'
                bat '''
                call .venv\\Scripts\\activate
                pytest tests/ --browser=chrome --headless ^
                    --html=reports/report.html ^
                    --self-contained-html ^
                    -v --capture=tee-sys
                '''
            }
        }

        stage('Archive rapport') {
            steps {
                echo 'üì¶ Archivage du rapport HTML'
                archiveArtifacts artifacts: 'reports/report.html', allowEmptyArchive: true
            }
        }
    }

    post {
        always {
            echo 'üßπ Nettoyage'
            deleteDir()
        }
    }
}
